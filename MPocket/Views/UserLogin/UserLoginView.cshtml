@model MPocket.Models.UserModel

@using (Html.BeginForm("Login", "UserLogin"))
{
    <div>
        <div class="row">
            <div class="col-md-offset-5 col-md-3" style="width:300px; height:400px; background:#f5f5f0">
                <div class="form-login">
                    <h4>Zaloguj się</h4>
                    @Html.TextBoxFor(m => m.Login, new {@class="form-control input-sm chat-input", @placeholder="adres email"})
                    <br />
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control input-sm chat-input", @placeholder = "hasło", @type="password" })
                    <br />
                    <div class="wrapper">
                        <span class="group-btn">
                            <button type="submit" class="btn btn-default" style="width:auto" onclick="location.href='@Url.Action("MainPanel", "MainPanel")'">Zaloguj</button>
                        </span>
                    </div>
                </div>
                <br />
                <div class="form-login">
                    <div class="wrapper">
                        <span>Nie masz konta? @Html.ActionLink("Zarejestruj się.", "RegisterUserView", "RegisterUser")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


