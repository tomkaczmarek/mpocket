@model MPocket.Models.UserModel

@using (Html.BeginForm("RegisterUser", "RegisterUser"))
{
    <div>
        <div class="row">
            <div class="col-md-offset-5 col-md-3" style="width:300px; height:400px; background:#f5f5f0">
                <div class="form-login">
                    <h4>Zarejestruj się</h4>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-sm chat-input", @placeholder = "Imię" , @type = "text" })
                    <br />
                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control input-sm chat-input", @placeholder = "Email", @type = "email" })
                    <br />
                    <div class="wrapper">
                        <span class="group-btn">
                            <button type="submit" class="btn btn-default" style="width:auto">Zarejestruj</button>
                        </span>
                    </div>
                </div>
                <br />
                <div class="form-login">
                    <div class="wrapper">
                        <span>Masz już konto? @Html.ActionLink("Zaloguj się.", "UserLoginView", "UserLogin")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
