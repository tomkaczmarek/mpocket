@model MPocket.Models.ExpensesModel

<br />
@using (Html.BeginForm("Save", "CentralPanel"))
{
    <div class="form-group">
        <div class="form-group">
            <label>Kwota</label>
            @Html.TextBoxFor(m => m.Amount, new { @placeholder = "kwota", @class = "form-control", @autocomplete = "off", @style = "width:138px" })
        </div>
        <div class="form-group">
            <label>Opis</label>
            @Html.TextBoxFor(m => m.Description, new { @placeholder = "opis", @class = "form-control", @style = "width:400px" })           
        </div>                
     </div>
    <button type="submit" class="btn btn-default">Zapisz</button>
}



