@model MPocket.Models.FirstLaunchModel
<br />

@using (Html.BeginForm("Save", "FirstLaunch"))
{
    <div class="form-group">
        <label>Budżet</label>
        @Html.TextBoxFor(m =>m.Budget.StartBudget, new { @class = "form-control", @style = "width:138px" })
    </div>
    <div class="form-group form-inline">
        <div class="form-group">
            <label>Początek okresu</label>
            @Html.TextBoxFor(m => m.Budget.StartDate, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Koniec okresu</label>
            @Html.TextBoxFor(m => m.Budget.EndDate, new { @class = "form-control"})
        </div>      
    </div>
    <br />
    <div class="checkbox">
        <label>@Html.CheckBoxFor(m =>m.Settings.IsManual) />Automatycznie przedłużaj budżet</label>
    </div>
    <button type="submit" class="btn btn-default">Zapisz</button>
}




